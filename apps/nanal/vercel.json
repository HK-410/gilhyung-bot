{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "cd ../.. && pnpm install",
  "buildCommand": "cd ../.. && pnpm run build",
  "rewrites": [
    { "source": "/src/api", "destination": "/api" }
  ],
  "crons": [
    {
      "path": "/api/daily",
      "schedule": "0 15 * * *"
    }
  ]
}
